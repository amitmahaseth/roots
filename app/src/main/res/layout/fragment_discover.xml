                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:gravity="center"
                        android:text="@string/save_recipes"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
