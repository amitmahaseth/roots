<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/_10sdp"
    android:id="@+id/clEditItem"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivShiftIcon"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_15sdp"
        android:src="@drawable/shifting_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/etItemText"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_corner_2"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:padding="@dimen/_10sdp"
        android:text=""
        android:textSize="@dimen/dimen_14sp"
        android:fontFamily="@font/work_sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivShiftIcon"
        app:layout_constraintEnd_toStartOf="@id/ivEditIcon"
        />

    <ImageView
        android:id="@+id/ivEditIcon"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/edit_profile_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintEnd_toStartOf="@id/ivRemoveIcon"/>
    <ImageView
        android:id="@+id/ivRemoveIcon"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/close_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>