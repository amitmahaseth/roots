<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_6sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivCircleTick"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/tick_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tvStepNumber"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:textSize="@dimen/_9ssp"
        android:backgroundTint="#B7BDA2"
        android:background="@drawable/filled_circle"
        android:gravity="center"
        android:padding="@dimen/_1sdp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textStyle="bold"
        app:fontFamily="@font/work_sans"
        app:layout_constraintTop_toTopOf="@id/ivCircleTick"
        app:layout_constraintStart_toEndOf="@id/ivCircleTick" />

    <TextView
        android:id="@+id/tvItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:fontFamily="@font/work_sans"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        android:text="item name"
        android:layout_marginStart="@dimen/_4sdp"
        app:layout_constraintStart_toEndOf="@id/tvStepNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>